<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/view_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/status_bar"
            layout="@layout/status_bar_view_black" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_radius_16_bottom"
        android:elevation="@dimen/_2sdp"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/_12sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_6sdp">

        <com.example.basekotlin.util.MovableText
            android:id="@+id/tv_tool_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_8sdp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/inter_600"
            android:gravity="start"
            android:includeFontPadding="false"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textSize="@dimen/_18ssp" />

        <ImageView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:src="@drawable/ic_main_setting" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:layout_marginTop="@dimen/_12sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_weight="1"
            android:fontFamily="@font/inter_500"
            android:includeFontPadding="false"
            android:text="@string/enable_emoji_battery_to_begin"
            android:textColor="@color/color_020007"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:id="@+id/tv_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_2sdp"
            android:background="@drawable/bg_radius_100_gradient"
            android:elevation="@dimen/_3sdp"
            android:fontFamily="@font/inter_500"
            android:includeFontPadding="false"
            android:paddingHorizontal="@dimen/_24sdp"
            android:paddingVertical="@dimen/_12sdp"
            android:text="@string/start"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/view_loading"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:gravity="center_horizontal">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/view_lottie"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_margin="@dimen/_12sdp"
                    android:scaleType="fitXY"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    app:lottie_rawRes="@raw/anim_loading" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/loading_data"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcv_battery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_6sdp"
                android:overScrollMode="never"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/item_emoji_battery" />

            <RelativeLayout
                android:id="@+id/iv_scroll_top"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_12sdp"
                android:background="@drawable/bg_radius_100"
                android:elevation="@dimen/_4sdp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_main_scroll_top" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/iv_create"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_12sdp"
                android:background="@drawable/bg_radius_100_gradient"
                android:elevation="@dimen/_4sdp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_main_create" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/btn_create"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/_12sdp"
                android:background="@drawable/bg_radius_100_gradient"
                android:elevation="@dimen/_4sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_16sdp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:src="@drawable/ic_main_create" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_500"
                    android:includeFontPadding="false"
                    android:text="@string/create_new"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

            </LinearLayout>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_12sdp"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/btn_status_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_radius_16"
                    android:backgroundTint="#1AC799E1"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_600"
                            android:text="@string/status_bar"
                            android:textColor="#98009A"
                            android:textSize="@dimen/_18ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_400"
                            android:text="@string/custom_emoji_battery_status_bar_appearance"
                            android:textColor="#020007"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:background="@drawable/iv_main_status_bar" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_gesture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:background="@drawable/bg_radius_16"
                    android:backgroundTint="#1A57BDFF"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_600"
                            android:text="@string/gesture"
                            android:textColor="#001F9A"
                            android:textSize="@dimen/_18ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_400"
                            android:text="@string/use_gesture_in_the_status_bar_for_custom_actions"
                            android:textColor="#020007"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:background="@drawable/iv_main_gesture" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_notch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:background="@drawable/bg_radius_16"
                    android:backgroundTint="#1AFF5353"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/_10sdp"
                    android:paddingVertical="@dimen/_12sdp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_600"
                            android:text="@string/notch"
                            android:textColor="#B50000"
                            android:textSize="@dimen/_18ssp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_400"
                            android:text="@string/use_gesture_in_the_status_bar_for_custom_actions"
                            android:textColor="#020007"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>


                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="85dp"
                        android:background="@drawable/iv_main_status_bar" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>


    </ViewFlipper>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@color/white"
        android:elevation="@dimen/_2sdp"
        android:paddingHorizontal="@dimen/_12sdp">

        <LinearLayout
            android:id="@+id/btn_battery"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginVertical="@dimen/_6sdp"
            android:layout_weight="1"
            android:background="@drawable/bg_radius_100_gradient"
            android:elevation="@dimen/_2sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_12sdp">

            <ImageView
                android:id="@+id/iv_battery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_6sdp"
                android:src="@drawable/ic_main_battery" />

            <com.example.basekotlin.util.MovableText
                android:id="@+id/tv_battery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/inter_700"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="@string/emoji_battery"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/_12sdp" />

        <LinearLayout
            android:id="@+id/btn_customize"
            android:layout_width="0dp"
            android:layout_height="54dp"
            android:layout_marginVertical="@dimen/_6sdp"
            android:layout_weight="1"
            android:elevation="@dimen/_2sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/_12sdp">

            <ImageView
                android:id="@+id/iv_customize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_6sdp"
                android:src="@drawable/ic_main_customize" />

            <com.example.basekotlin.util.MovableText
                android:id="@+id/tv_customize"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:fontFamily="@font/inter_700"
                android:includeFontPadding="false"
                android:singleLine="true"
                android:text="@string/customize"
                android:textColor="@color/color_6B6B6B"
                android:textSize="@dimen/_12ssp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>